{
  "name": "ts-node-ready",
  "version": "1.1.0",
  "description": "Ready for scripting Node with Typescript",
  "private": true,
  "keywords": [
    "node",
    "typescript",
    "ts-node",
    "tslint"
  ],
  "homepage": "https://github.com/towertop/ts-node-ready",
  "repository": {
    "type": "git",
    "url": "https://github.com/towertop/ts-node-ready.git"
  },
  "author": "towertop",
  "license": "MIT",
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc --listEmittedFiles -p src/tsconfig.app.json",
    "clean": "rimraf dist/",
    "dev": "ts-node src/main.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' src/main.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lintFix": "tslint --fix -c tslint.json -p tsconfig.json",
    "test": "TS_NODE_PROJECT=src/tsconfig.spec.json mocha 'src/**/*.spec.ts'",
    "testWatch": "TS_NODE_PROJECT=src/tsconfig.spec.json mocha --watch 'src/**/*.spec.ts'",
    "prepublishOnly": "npm run lint && npm test && npm run clean && npm run build",
    "preversion": "npm run lint && npm test",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.5",
    "chai": "^4.2.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
