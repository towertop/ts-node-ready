{
  "name": "ts-node-ready",
  "version": "0.0.1",
  "description": "Ready to scripting Node with Typescript",
  "keywords": [
    "node",
    "typescript",
    "ts-node",
    "tslint"
  ],
  "homepage": "https://github.com/towertop/ts-node-ready",
  "repository": {
    "type": "git",
    "url": "https://github.com/towertop/ts-node-ready.git"
  },
  "author": "towertop",
  "license": "MIT",
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc --listEmittedFiles -p src/tsconfig.app.json",
    "clean": "rimraf dist/",
    "dev": "ts-node src/main.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' src/main.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lintFix": "tslint --fix -c tslint.json -p tsconfig.json",
    "prepublishOnly": "npm run lint && npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/node": "^11.9.5",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  }
}
